<div class="bg-gray-100 flex items-center overflow-hidden py-40 px-20 h-full">
  <div class="container mx-auto max-w-md bg-white rounded-xl shadow-lg hover:scale-105 hover:shadow-2xl  duration-500">
  <div class="flex items-center justify-between px-4">
    <div class="flex justify-between items-center py-4">
      <%= link_to user_path(@post.user) do %>
        <%= image_with_fallback(@post.user, :profile_picture, Settings.default.avatar, "profile-picture h-12 w-12 rounded-full") %>
      <% end %>
      <div class="ml-3">
        <h1 class="text-xl font-bold text-gray-800 cursor-pointer"><%= @post.username %></h1>
        <p class="text-sm text-gray-800 hover:underline cursor-pointer"><%= time_ago_in_words(@post.created_at) %></p>
      </div>
    </div>

  </div>
  <%= image_with_fallback(@post, :content_url, Settings.default.post_image, "post-content-image") %>
  <div class="p-6">
    <p class="text-xl text-gray-800 font-semibold"><%= @post.caption %></p>
    <%= render partial: "posts/like_button", locals: {post: @post} %>
  </div>
  </div>
</div>
