<%= form_with model: item, url: url do |form| %>
  <div class="space-y-6 p-6 bg-white shadow rounded-lg">
    <div class="mt-4">
      <%= form.label :caption, t("posts.form.caption.label"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :caption, class: "mt-1 px-4 py-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-300 focus:border-indigo-500", placeholder: t("posts.form.caption.placeholder") %>
      <p class="text-sm text-red-600 mt-2">
        <%= show_errors(item, :caption) %>
      </p>
    </div>
    <div class="mt-4">
      <%= form.label :status, t("posts.form.status.label"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :status, Post.statuses.keys.map { |status| [t("posts.form.status.#{status}"), status] }, :last, :first, {}, class: "mt-1 px-4 py-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-300 focus:border-indigo-500" %>
    </div>
    <div class="mt-4">
      <%= form.label :content_url, t("posts.form.upload_images"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :content_url, class: "mt-1 px-4 py-2 w-full border rounded-md focus:ring focus:ring-indigo-300 focus:border-indigo-300" %>
    </div>
    <div class="mt-6">
      <%= form.submit yield(:submit_text), class: "w-full px-4 py-2 bg-indigo-500 text-white rounded-md shadow-sm hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:ring-opacity-50" %>
    </div>
  </div>
<% end %>
