<% flash.each do |message_type, message| %>
  <% alert_classes = case message_type.to_s
    when "success" then "bg-green-100 border-t-4 border-green-500 text-green-700"
    when "danger" then "bg-red-100 border-t-4 border-red-500 text-red-700"
    when "warning" then "bg-yellow-100 border-t-4 border-yellow-500 text-yellow-700"
    else "bg-gray-100 border-t-4 border-gray-500 text-gray-700"
  end %>
  <div class="px-4 py-2 shadow-md mb-4 rounded-md flex flex-col text-center <%= alert_classes %>">
    <% if message.is_a?(Array) %>
      <% message.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% else %>
      <%= message %>
    <% end %>
  </div>
<% end %>
