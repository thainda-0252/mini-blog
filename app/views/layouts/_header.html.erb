<header class="w-full">
  <nav class="bg-white border-gray-200 py-2.5 bg-red-900">
    <div class="flex flex-wrap items-center justify-between max-w-screen-xl px-4 mx-auto">
      <%= link_to root_path, class: "flex items-center" do %>
        <%= render "layouts/logo" %>
      <% end %>
        <div class="items-center justify-between hidden w-full lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
        <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
          <li>
            <%= link_to t("header.newfeed"), users_path, class: "block py-2 pl-3 pr-4 text-white rounded lg:bg-transparent lg:p-0 text-white", "aria-current": "page" %>
          </li>
          <li>
            <%= link_to t("header.discover"), posts_path, class: "block py-2 pl-3 pr-4 text-white rounded lg:bg-transparent lg:p-0 text-white", "aria-current": "page" %>
          </li>
          <li>
            <%= link_to t("user.listUser"), users_path, class: "block py-2 pl-3 pr-4 text-white rounded lg:bg-transparent lg:p-0 text-white", "aria-current": "page" %>
          </li>
          <div class="text-white flex">
            <%= link_to "Japanese", locale: :jp %>
            <p class="border-l-2 ml-1 mr-1"></p>
            <%= link_to "Vietnamese", locale: :vi %>
          </div>
        </ul>
        <% if logged_in? %>
          <div class=" font-medium lg:flex-row lg:space-x-8 lg:mt-0 flex mt-2 ml-3">
            <ul>
              <li class: "bg-blue-500 text-white hover:bg-blue-600 px-3 py-2 rounded-md">
                <%= link_to t("users.logout"), logout_path, class: "bg-blue-500 text-white hover:bg-blue-600 px-3 py-2 rounded-md", 
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </div>
          <% else %>
            <div class="flex justify-center items-center ml-2">
              <div class="space-x-2">
                <%= link_to t("login.title"), login_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded-md" %>
                <%= link_to t("register.title"), register_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
